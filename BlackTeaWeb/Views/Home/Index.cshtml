<style>
    .tag {
        margin: 5px 10px 5px 10px;
    }
</style>
<div id="app">


    <h1>DPS 日志历史 </h1>
    <div>
        <a class="pure-button tag" v-bind:class="{'pure-button-primary':bossName==''}" v-on:click="search('')">全部</a>
        <a class="pure-button tag" v-bind:class="{'pure-button-primary':bossName==boss}" v-for="boss in bossNames" v-key="boss" v-on:click="search(boss)">{{boss}}</a>
    </div>

    <h3> Top 100 通关日志 </h3>

    <table class="pure-table" width="100%">
        <thead>
            <tr>
                <th>#</th>
                <th>Boss</th>
                <th>进度</th>
                <th>消耗时间</th>
                <th>上传者</th>
                <th>上传时间</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="(item,index) in logs" v-key="item.id">
                <td>{{index+1}}</td>
                <td>{{item.bossName}}</td>
                <td>{{item.success?"通关":"失败"}}</td>
                <td>{{item.durationString}}</td>
                <td>{{item.uploader}}</td>
                <td>{{item.uploadTime}}</td>
                <td><a target="_blank" :href="'/files/'+item.id+'.html'">查看</a></td>
            </tr>
        </tbody>
    </table>
</div>


@section Scripts{

    <script>

        var app = new Vue({
            el: "#app",
            data: {
                bossNames: [],
                logs: [],
                bossName: ""
            },
            methods: {
                getBossNames() {
                    httpGet("/dpslog/bossNames", {}).then(res => {
                        this.bossNames = res.data;
                    });
                },
                getLogs() {
                    httpGet("/dpslog/list", {
                        pageIndex: 1,
                        pageSize: 100,
                        bossName: this.bossName
                    }).then(res => {
                        this.logs = res.data;
                    });
                },
                search(bossName) {
                    this.bossName = bossName;
                    this.getLogs();
                }

            },
            mounted() {
                this.getBossNames();
                this.getLogs();
            }
        });

    </script>



}



